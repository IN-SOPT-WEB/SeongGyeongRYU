{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ES5",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "noImplicitAny": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
